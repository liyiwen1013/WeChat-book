<!--pages/square/square.wxml-->
<view class="container">
    <view class="header">
        <v-episode class="episode" index="{{ classic.index }}" />
        <view class="like-container">
          <v-like class="like" bind:like="onLike" like="{{ likeStatus }}" count="{{ likeCount }}" />
          <v-button class="share-btn" open-type="share">
            <image class="share" slot="img" src="/images/share.png" />
          </v-button>
        </view>
    </view>
    <v-movie hidden="{{classic.type!=1}}" img="{{classic.image}}" content="{{classic.content}}" />
    <v-music wx:if="{{classic.type==2}}" img="{{classic.image}}" content="{{classic.content}}" title="{{classic.title}}" src="{{classic.url}}" />
    <v-essay hidden="{{classic.type!=3}}" img="{{classic.image}}" content="{{classic.content}}" />
    <v-navi bind:left="onPrevious" bind:right="onNext" title="{{classic.title}}" first="{{first}}" latest="{{latest}}" class="navi" />
</view>