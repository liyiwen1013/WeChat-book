.logo {
  width: 100%;
  height: 250rpx;
  overflow: hidden;
  margin: 0 auto;
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.logo image {
  height: 250rpx;
}
.logotxt {
  width: 100%;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  margin: 10rpx 0;
  position: relative;
}
.logotxt::after {
  content: "";
  position: absolute;
  left: 20%;
  width: 60%;
  z-index: -1;
  height:30rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
