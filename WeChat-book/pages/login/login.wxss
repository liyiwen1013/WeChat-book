  padding: 0 20rpx;
  display: inline;
  font-style: italic;
}
.login-form {
  margin: 0 auto;
  width: 80%;
  box-sizing: border-box;
  overflow: hidden;
  margin-top: 40rpx;
}
.uname, .upwd {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.6);
  margin-bottom: 40rpx;
}
.uname view, .upwd view {
  width: 100rpx;
  height: 80rpx;
  text-align: justify;
  line-height: 80rpx;
  overflow: hidden;
  color: #333;
}
.uname view::after, .upwd view::after {
  width: 100%;
  display: inline-block;
  content: '';
}
.login-form input {
  display: inline-block;
  width: 400rpx;
  line-height: 80rpx;
  margin-left: 60rpx;
  height: 80rpx;
}
.loginbtn {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.loginbtn button, .loginbtn div {
  display: inline-block;
  width: 40%;
  height: 80rpx;
  background-color: #74c7f2;
  border-radius: 10rpx;
  line-height: 50rpx;
  text-align: center;
  margin: 0;
  color: white;
  font-size: 28rpx;
  font-weight: normal;
}
.loginbtn button::after {
  border: none
}
.forgetpwd {
  text-align: right;
  width: 80%;
  margin: 0 auto;
  margin-top: 20rpx;
  text-decoration: underline;
  color: #333;
}

/* 提示框，自动消失，没有关闭按钮 */
.notify-model {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1111;
  opacity: 0;
  outline: 0;
  text-align: center;
  -ms-transform: scale(1.185);
  transform: scale(1.185);
  backface-visibility: hidden;
  perspective: 2000rpx;
  background: rgba(0, 0, 0, 0.6);
  transition: all 0.3s ease-in-out 0s;
  pointer-events: none;
}
.notify-model::before {
  content: "";
  display: inline-block;
  height: 100%;
  vertical-align: middle;
}
.notify-model-inner {
  position: relative;
  vertical-align: middle;
  width: 400rpx;
  max-width: 100%;
  overflow: hidden;
  height: auto;
  background-color: #f8f8f8;
  display: inline-block;
  border-radius: 10rpx;
}
.notify-model-inner-title {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #74c7f2;
  color: white;
}
.notify-model-inner-detail {
  width: 100%;
  z-index: 2;
  text-align: center;
  vertical-align: text-top;
  box-sizing: border-box;
  padding: 20rpx 0;
  color: #666;
}
.show-notify-model {
  opacity: 1;
  transition-duration: 0.3s;
  -ms-transform: scale(1);
  transform: scale(1);
  overflow-x: hidden;
  overflow-y: auto;
  pointer-events: auto;
}

