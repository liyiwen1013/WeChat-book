<!-- 评论 -->
<view  wx:if="{{isNormal==true}}">
  <view class="item" wx:for="{{mycomment}}" wx:key="index" bindtap="toComment" bindlongpress="deleteComment" data-title="{{item.title}}" data-index="{{index}}" data-id="{{item.id}}">
    <view class="date">{{item.createTime}}</view>
    <view class="innerbox">
      <view class="content">{{item.content}}</view>
      <view class="title"><text>{{item.type==0?"评论":"引用"}}</text> {{item.postsTitle}}</view>
    </view>
  </view>
  <view style="height: 60rpx"></view>

  <!-- 当用户当前没有任何消息的时候，显示空的信息 -->
  <view class="null-data" wx:if="{{mycomment.length==0}}">
    <image src="https://pic4.zhimg.com/v2-405fe33df25b3d6a1c8617054f8ace5b_b.gif" mode="widthFix"></image>
    <view>看来你还没进行过评论</view>
  </view>
</view>

