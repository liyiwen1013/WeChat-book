/* 搜索书籍内容区样式 */
.books-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* background-color: aqua; */
}

.book-item {
  width: 90%;
  height: 200rpx;
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 20rpx;
  background-color: white;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.15);
}

.book-item image {
  width: 22%;
  height: 150rpx;
  margin: 20rpx;
}

.book-item-mess {
  width: 65%;
  display: flex;
  flex-direction: column;
  padding-top: 10rpx;
}
/* 右侧内容区书籍名称样式 */
.book-item .name {
  font-size: 35rpx;
  font-weight: bold;
  padding: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.book-item .author {
  font-size: 28rpx;
  font-weight: 200;
  padding: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.book-item .item-foot {
  font-size: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}
.book-item .collectCount {
  color: #666666;
  font-size: 24rpx;
}

/* 没有登陆的时候的弹窗 */
.outModel {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1110;
  opacity: 0;
  outline: 0;
  text-align: center;
  -ms-transform: scale(1.185);
  transform: scale(1.185);
  backface-visibility: hidden;
  perspective: 2000rpx;
  background: rgba(0, 0, 0, 0.6);
  transition: all 0.3s ease-in-out 0s;
  pointer-events: none;
}
.outModel::before {
  content: "";
  display: inline-block;
  height: 100%;
  vertical-align: middle;
}
.innerModel {
  position: relative;
  vertical-align: middle;
  width: 400rpx;
  max-width: 100%;
  overflow: hidden;
  height: auto;
  background-color: #f8f8f8;
  display: inline-block;
  color: #333;
  border-radius: 10rpx;
}
.innerModel-title {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #74c7f2;
  color: white;
}
.closebtn {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  right: 30rpx;
  top: 10rpx;
  background-image: url("data:image/png;base64,");
  background-size: 30rpx 30rpx;
  background-repeat: no-repeat;
  background-position: center center;
}
.notify {
  width: 100%;
  color: #333;
  z-index: 2;
  text-align: center;
  vertical-align: text-top;
  box-sizing: border-box;
  padding: 20rpx 0;
}
.innerModel .go-login {
  height: 80rpx;
  width: 100%;
  line-height: 80rpx;
  border-radius: 0 0 10rpx 10rpx;
  background-color: rgba(29, 15, 15, 0.06);
}
.show {
  opacity: 1;
  transition-duration: 0.3s;
  -ms-transform: scale(1);
  transform: scale(1);
  overflow-x: hidden;
  overflow-y: auto;
  pointer-events: auto;
  -webkit-overflow-scrolling: touch
}
.del-model {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1110;
  opacity: 0;
  outline: 0;
  text-align: center;
  -ms-transform: scale(1.185);
  transform: scale(1.185);
  backface-visibility: hidden;
  perspective: 2000rpx;
  background: rgba(0, 0, 0, 0.6);
  transition: all 0.3s ease-in-out 0s;
  pointer-events: none;
}
.del-model::before {
  content: "";
  display: inline-block;
  height: 100%;
  vertical-align: middle;
}
.del-model-inner {
  position: relative;
  vertical-align: middle;
  width: 560rpx;
  max-width: 100%;
  overflow: hidden;
  height: auto;
  background-color: #f8f8f8;
  display: inline-block;
  color: #333;
  border-radius: 10rpx;
}
.closebtn {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  right: 30rpx;
  top: 20rpx;
  background-image: url("data:image/png;base64,");
  background-size: 30rpx 30rpx;
  background-repeat: no-repeat;
  background-position: center center;
}
.del-title {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #74c7f2;
  color: white;
}
.del {
  width: 100%;
  color: #333;
  z-index: 2;
  text-align: center;
  vertical-align: text-top;
  box-sizing: border-box;
  padding: 20rpx;
}
.go-del{
  height: 80rpx;
  width: 100%;
  line-height: 80rpx;
  border-radius: 0 0 10rpx 10rpx;
  background-color: rgba(0, 0, 0, 0.06);
}
.show-del-model {
  opacity: 1;
  transition-duration: 0.3s;
  -ms-transform: scale(1);
  transform: scale(1);
  overflow-x: hidden;
  overflow-y: auto;
  pointer-events: auto;
  -webkit-overflow-scrolling: touch
}

.null-data {
  position: fixed;
  width: 80%;
  top: 50%;
