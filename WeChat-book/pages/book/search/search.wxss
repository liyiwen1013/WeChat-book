.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
}

.header {
    background-color: #74c7f2;
    position: fixed;
    height: 100rpx;
    border-bottom: 1px solid #f5f5f5;
    display: flex;
    flex-direction: row;
    width: 750rpx;
    align-items: center;
    z-index: 99;
}

.search-container {
    display: inline-flex;
    flex-direction: row;
    align-items: center;
    background-color: #f5f5f5;
    border-radius: 50px;
    margin-left: 20rpx;
}

.in-bar {
    color: #999;
}

.bar {
    border-top-right-radius: 15px;
    border-bottom-right-radius: 15px;
    display: inline-block;
    height: 68rpx;
    width: 1000rpx;
    font-size: 28rpx;
}

.icon {
    width: 28rpx;
    height: 28rpx;
    margin-left: 24rpx;
    margin-right: 16rpx;
}

.cancel {
  line-height: 68rpx;
  width: 120rpx;
  text-align: center;
  display: inline-block;
  /* 将元素边框设置为空，不显示边框 */
  border: none;
}
.delete{
  line-height: 68rpx;
  width: 30rpx;
  text-align: center;
  display: inline-block;
  margin: 0 20rpx;
}

.cancel-img {
  width: 29rpx;
  height: 29rpx;
}

.history {
    width: 690rpx;
    margin: 40rpx 0 20rpx 0;
    display: flex;
    font-size: 28rpx;
    margin-top: 160rpx;
    flex-direction: column;
}

.hot-search {
    margin-top: 70rpx;
}

.title {
    line-height: 30rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.books-container v-book {
    margin-bottom: 25rpx;
}

.books-container {
    width: 570rpx;
    margin-top: 100rpx;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    padding: 0 90rpx 0 90rpx;
    justify-content: space-between;
}

.loading {
    margin: 50rpx 0 50rpx 0;
}

.loading-center {
    position: absolute;
    top: 50%;
    left: 50%;
}

.empty-tip {
    display: inline-block;
    width: 100%;
    text-align: center;
    position: absolute;
    top: 50%;
}

.chunk {
    height: 30rpx;
    width: 10rpx;
    background-color: #000;
    display: inline-block;
    margin-right: 20rpx;
}

.item {
    /* padding-left:15px; */
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    margin-top: 24rpx;
    padding-left: 30rpx;
    width: 630rpx;
}

.item v-tag {
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
/* 输入框input */
.bar {
  border-top-right-radius: 15px;
  border-bottom-right-radius: 15px;
  display: inline-block;
  height: 68rpx;
  width: 500rpx;
  font-size: 28rpx;
}

/* 搜索书籍内容区样式 */
.books-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  /* background-color: aqua; */
}

.book-item {
  width: 90%;
  height: 200rpx;
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 20rpx;
  background-color: white;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.15);
}

.book-item image {
  width: 22%;
  height: 150rpx;
  margin: 20rpx;
}

.book-item-mess {
  width: 65%;
  display: flex;
  flex-direction: column;
  padding-top: 10rpx;
}
/* 右侧内容区书籍名称样式 */
.book-item .name {
  font-size: 35rpx;
  font-weight: bold;
  padding: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.book-item .author {
  font-size: 28rpx;
  font-weight: 200;
  padding: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.book-item .item-foot {
  font-size: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}
.book-item .collectCount {
  color: #666666;
  font-size: 24rpx;
}