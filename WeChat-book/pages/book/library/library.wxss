/* pages/book/library/library.wxss */

.container {
  display: flex;
  flex-direction: row;
  background-color: rgb(225, 249, 252);
}

/* 左侧分类栏样式 */
.left-list {
  display: flex;
  flex-direction: column;
  width: 20%;
  box-sizing: border-box;
  overflow: hidden;
  border-right: 1rpx solid rgb(75, 174, 240, 0.15);
}

/* 左侧分类栏中每个分类的样式 */
.left-list .item {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 33rpx;
  line-height: 90rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid rgb(228, 238, 245);
}

/* 左侧分类栏中选中分类的样式 */
.left-list .item.active {
  background-color: #f7f7f7;
  color: #74c7f2;
  border-radius: 15rpx;
}

/* 右侧内容区样式 */
.right-container {
  width: 80%;
  display: flex;
  flex-direction: column;
}

/* 右侧内容区书籍项样式 */
.book-item {
  width: 90%;
  display: flex;
  flex-direction: row;
  margin: 20rpx 30rpx;
  border-radius: 25rpx;
  background-color: #ffffff;
}

/* 右侧内容区书籍图片样式 */
.book-item image {
  width: 22%;
  height: 150rpx;
  margin: 20rpx;
  box-shadow: 0 0 10rpx #ccc;
  /* background-color: #466e83; */
}
/* 右侧内容区书籍详情样式 */
.book-item-mess {
  width: 60%;
  display: flex;
  flex-direction: column;
  /* background-color: #466e83; */
}
/* 右侧内容区书籍名称样式 */
.book-item .name {
  font-size: 35rpx;
  font-weight: bold;
  line-height: 80rpx;
  padding: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  /* background-color: #a2e9c5; */
}
.book-item .author {
  font-size: 28rpx;
  line-height: 40rpx;
  padding: 10rpx;
  /* background-color: #a2e9c5; */
}