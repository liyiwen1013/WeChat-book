<!--pages/book/library/library.wxml-->
<view class="container">
  <view class="left-list">
    <block wx:for="{{categoryList}}" wx:key="category">
      <view class="item{{index === current ? ' active' : ''}}" bindtap="onCategoryTap"  data-index="{{ index }}" data-category="{{item.id}}">
        {{item.name}}
      </view>
    </block>
  </view>
  <view class="right-container">
    <block wx:if="{{booksList.length}}">
      <scroll-view scroll-y="true" style="height: 100%;">
        <block wx:for="{{booksList}}" wx:key="book">
          <view class="book-item" bindtap="onNextBook">
            <image src="{{item.imgUrl}}" mode="aspectFit" />
            <view class="book-item-mess">
              <view class="name">{{item.name}}</view>
              <view class="author">{{item.author}}</view>
              <!-- <view class="author">{{item.author}}</view> -->
            </view>
          </view>
        </block>
      </scroll-view>
    </block>
    <view wx:else class="empty-tip">暂无数据</view>
  </view>
</view>