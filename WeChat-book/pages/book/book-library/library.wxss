/* pages/book/library/library.wxss */

.container {
  display: flex;
  flex-direction: row;
  /* background-color: rgb(225, 249, 252); */
}

/* 左侧分类栏样式 */
.left-list {
  display: flex;
  flex-direction: column;
  width: 20%;
  box-sizing: border-box;
  overflow: hidden;
  border-right: 1rpx solid rgb(75, 174, 240, 0.15);
}

/* 左侧分类栏中每个分类的样式 */
.left-list .item {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 33rpx;
  line-height: 90rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid rgb(228, 238, 245);
}

/* 左侧分类栏中选中分类的样式 */
.left-list .item.active {
  background-color: #f7f7f7;
  color: #74c7f2;
  border-radius: 15rpx;
}

/* 右侧内容区样式 */
.right-container {
  width: 80%;
  display: flex;
  flex-direction: column;
}

/* 右侧内容区书籍项样式 */
.book-item {
  width: 90%;
  display: flex;
  flex-direction: row;
  margin: 20rpx 30rpx;
  border-radius: 25rpx;
  background-color: white;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.15);
}

/* 右侧内容区书籍图片样式 */
.book-item image {
  width: 22%;
  height: 150rpx;
  margin: 20rpx;
}
/* 右侧内容区书籍详情样式 */
.book-item-mess {
  width: 60%;
  display: flex;
  flex-direction: column;
  /* background-color: #466e83; */
}
/* 右侧内容区书籍名称样式 */
.book-item .name {
  font-size: 35rpx;
  font-weight: bold;
  line-height: 80rpx;
  padding: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  /* background-color: #a2e9c5; */
}
.book-item .author {
  font-size: 28rpx;
  line-height: 40rpx;
  padding: 10rpx;
  font-weight: 200;
  /* background-color: #a2e9c5; */
}
/* 没有登陆的时候的弹窗 */
.outModel {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1110;
  opacity: 0;
  outline: 0;
  text-align: center;
  -ms-transform: scale(1.185);
  transform: scale(1.185);
  backface-visibility: hidden;
  perspective: 2000rpx;
  background: rgba(0, 0, 0, 0.6);
  transition: all 0.3s ease-in-out 0s;
  pointer-events: none;
}
.outModel::before {
  content: "";
  display: inline-block;
  height: 100%;
  vertical-align: middle;
}
.innerModel {
  position: relative;
  vertical-align: middle;
  width: 400rpx;
  max-width: 100%;
  overflow: hidden;
  height: auto;
  background-color: #f8f8f8;
  display: inline-block;
  color: #333;
  border-radius: 10rpx;
}
.title {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #74c7f2;
  color: white;
}
.closebtn {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  right: 30rpx;
  top: 10rpx;
  background-image: url("data:image/png;base64,");
  background-size: 30rpx 30rpx;
  background-repeat: no-repeat;
  background-position: center center;
}
.notify {
  width: 100%;
  color: #333;
  z-index: 2;
  text-align: center;
  vertical-align: text-top;
  box-sizing: border-box;
  padding: 20rpx 0;
}
.go-login {
  height: 80rpx;
  width: 100%;
  line-height: 80rpx;
  border-radius: 0 0 10rpx 10rpx;
  background-color: rgba(29, 15, 15, 0.06);
}
.show {
  opacity: 1;
  transition-duration: 0.3s;
  -ms-transform: scale(1);
  transform: scale(1);
  overflow-x: hidden;
  overflow-y: auto;
  pointer-events: auto;
  -webkit-overflow-scrolling: touch
}

