/* pages/book/book.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}
/* 头部-搜索栏 */
.header {
  width: 100%;
  height: 100rpx;
  position: fixed;
  background-color: #74c7f2;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  box-shadow: 0 0 3px 0 #e3e3e3;
  z-index: 99;
}

/* 搜索框 */
.search {
  width: 700rpx;
  height: 68rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-radius: 50px;
  background-color: #f5f5f5;
  color: #999999;
}
.search image {
  margin-right: 10px;
  width: 14px;
  height: 14px;
  margin-bottom: -2px;
}

/* 图书馆藏书 */
.head {
  width: 90%;
  height: 150rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 25rpx;
  margin: 140rpx 0 45rpx 0;
  background-image: url('https://cdn.pixabay.com/photo/2023/03/12/20/54/ai-generated-7847841_960_720.jpg');
}
/* 图书部分 */
.sub-container {
  width: 90%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.15);
  border-radius: 25rpx;
}
.nav {
  margin: 20rpx;
  align-items: center;
  /* background-color: bisque; */
  position: relative;
  display: inline-block;
}
/* 精选书籍 */
.head-txt {
  color: rgb(45, 136, 163); 
  line-height: 60rpx;
  font-size: 43rpx;
}
.ani-bar {
  position: absolute;
  width: 99%;
  bottom: 0;
  height: 30rpx;
  background-color: rgb(116, 199, 242, 0.4);
  border-radius: 16rpx;
}

/* 书籍部份 */
.books-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 57rpx;
  margin-bottom: 30rpx;
  border-radius: 25rpx;
}
.item-books {
  margin: 20rpx 0;
  display: flex;
  position: relative;
  box-shadow: 3px 1px 3px #aaa9a9;
  flex-direction: column;
  width: 240rpx;
  height: 350rpx;
}
.item-books image {
  width: 100%;
  height: 100%;
  border-radius: 5rpx;
}

.item-description {
  width: 216rpx;
  position: absolute;
  bottom: 0;
  background-color: #fff;
  padding: 5rpx 10rpx 8rpx 15rpx;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  border-bottom-right-radius: 2px;
  border-bottom-left-radius: 2px;
}

.item-title {
  margin-top: 10rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.item-author {
  font-size: 20rpx;
  color: #999999;
  margin-bottom: 10rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.item-foot {
  font-size: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.item-footer {
  color: #666666;
}

.logotxt {
  width: 100%;
  text-align: center;
  height: 120rpx;
  line-height: 60rpx;
  margin: 150rpx 0 200rpx 0;
  position: relative;
  color: #666;
  /* background-color: violet; */
}
.logotxt::after {
  content: "";
  position: absolute;
  left: 30%;
  width: 40%;
  z-index: -1;
  height: 30rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.4);
  /* top: 0; */
}
.logotxt .txt {
  background-color: rgb(245, 247, 250);
  padding: 0 20rpx;
  display: inline;
}

/* 没有登陆的时候的弹窗 */
.outModel {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 1110;
  opacity: 0;
  outline: 0;
  text-align: center;
  -ms-transform: scale(1.185);
  transform: scale(1.185);
  backface-visibility: hidden;
  perspective: 2000rpx;
  background: rgba(0, 0, 0, 0.6);
  transition: all 0.3s ease-in-out 0s;
  pointer-events: none;
}
.outModel::before {
  content: "";
  display: inline-block;
  height: 100%;
  vertical-align: middle;
}
.innerModel {
  position: relative;
  vertical-align: middle;
  width: 400rpx;
  max-width: 100%;
  overflow: hidden;
  height: auto;
  background-color: #f8f8f8;
  display: inline-block;
  color: #333;
  border-radius: 10rpx;
}
.title {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #74c7f2;
  color: white;
}
.closebtn {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  right: 30rpx;
  top: 10rpx;
  background-image: url("data:image/png;base64,");
  background-size: 30rpx 30rpx;
  background-repeat: no-repeat;
  background-position: center center;
}
.notify {
  width: 100%;
  color: #333;
  z-index: 2;
  text-align: center;
  vertical-align: text-top;
  box-sizing: border-box;
  padding: 20rpx 0;
}
.go-login {
  height: 80rpx;
  width: 100%;
  line-height: 80rpx;
  border-radius: 0 0 10rpx 10rpx;
  background-color: rgba(29, 15, 15, 0.06);
}
.show {
  opacity: 1;
  transition-duration: 0.3s;
  -ms-transform: scale(1);
  transform: scale(1);
  overflow-x: hidden;
  overflow-y: auto;
  pointer-events: auto;
  -webkit-overflow-scrolling: touch
}

