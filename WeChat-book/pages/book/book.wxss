/* pages/book/book.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  background-color: rgb(243, 243, 243);
}
/* 头部-搜索栏 */
.header {
  width: 100%;
  height: 100rpx;
  position: fixed;
  background-color: #74c7f2;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  box-shadow: 0 0 3px 0 #e3e3e3;
  z-index: 99;
}

/* 搜索框 */
.search {
  width: 700rpx;
  height: 68rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-radius: 50px;
  background-color: #f5f5f5;
  color: #999999;
}
.search image {
  margin-right: 10px;
  width: 14px;
  height: 14px;
  margin-bottom: -2px;
}

/* 图书馆藏书 */
.head {
  width: 90%;
  height: 150rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  /* background-color: aqua; */
  border-radius: 25rpx;
  margin: 140rpx 0 45rpx 0;
  background-image: url('https://cdn.pixabay.com/photo/2023/03/12/20/54/ai-generated-7847841_960_720.jpg');
}
/* 图书部分 */
.sub-container {
  width: 90%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #ffffff;
  border-radius: 25rpx;
  /* background-image: url('https://cdn.pixabay.com/photo/2023/03/12/20/54/ai-generated-7847841_960_720.jpg'); */
}
.nav {
  margin: 20rpx;
  align-items: center;
  /* background-color: bisque; */
  position: relative;
  display: inline-block;
}
/* 精选书籍 */
.head-txt {
  color: rgb(45, 136, 163); 
  line-height: 60rpx;
  font-size: 43rpx;
}
.ani-bar {
  position: absolute;
  width: 99%;
  bottom: 0;
  height: 30rpx;
  background-color: rgb(116, 199, 242, 0.4);
  border-radius: 16rpx;
}

/* 书籍部份 */
.books-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  padding: 0 20rpx;
  border-radius: 25rpx;
}

.books-container v-book{
  margin-bottom: 50rpx;
}
