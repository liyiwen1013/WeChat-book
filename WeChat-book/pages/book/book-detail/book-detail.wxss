.container {
  background-color: #9c2727;
  width: 100%;
}

.head {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 90%;
  border-radius: 30rpx;
  margin: 30rpx auto;
  padding: 30rpx 0;
  background-color: white;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.15);
}
.head image {
  margin-left: 50rpx;
  width: 200rpx;
  height: 270rpx;
  box-shadow: 2px 2px 3px #9c9c9c;
}
.head-right {
  display: flex;
  flex-direction: column;
  line-height: 60rpx;
  width: 50%;
}
.book-title {
  color: #2f2f2f;
  margin: 20rpx 0;
  font-size: 39rpx;
  font-weight: 600;
}
.book-author {
  font-size: 28rpx;
  color: #74c7f2;
}
.book-subtitle {
  font-size: 30rpx;
  color: #2f2f2f;
}

.sub-container {
  width: 90%;
  border-radius: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
  margin: 30rpx auto;
  padding: 30rpx 0;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.15);
}

.headline {
  font-size: 30rpx;
  font-weight: 600;
  color: #2f2f2f;
  margin-bottom: 20rpx;
}

.comment-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.comment-container v-tag {
  margin-right: 15rpx;
  margin-bottom: 10rpx;
}

.content {
  /* 首行缩进 */
  text-indent: 58rpx;
  font-weight: 500;
  padding: 0 30rpx;
  width: 90%;
  word-wrap: break-word;
}

.num {
  margin-left: 10rpx;
  font-size: 22rpx;
  color: #aaa;
}

